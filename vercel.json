{
  "buildCommand": "pnpm install && pnpm build",  
  "framework": null,
  "outputDirectory": "dist/public",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/serverless"
    }
  ],
  "functions": {
    "api/serverless.*": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}