# ========================================================================
# Configuração do Supabase
# ========================================================================
# URL do projeto Supabase
SUPABASE_URL=https://your-project-id.supabase.co

# Chave pública anônima do Supabase (pode ser exposta no frontend)
SUPABASE_ANON_KEY=your-anon-key-here

# Chave de serviço do Supabase (NUNCA exponha no frontend, apenas no servidor)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# URL de conexão direta ao banco PostgreSQL
SUPABASE_DB_URL=postgresql://postgres:password@db.your-project-id.supabase.co:5432/postgres

# ========================================================================
# Configuração da Aplicação
# ========================================================================
# Email do administrador (este usuário terá privilégios de admin)
ADMIN_EMAIL=admin@example.com

# Título da aplicação (aparece no frontend)
VITE_APP_TITLE=Menu Digital

# ========================================================================
# Variáveis do Frontend (Vite)
# ========================================================================
# Estas variáveis são expostas no frontend e devem começar com VITE_
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ========================================================================
# Integrações Opcionais
# ========================================================================
# API do Forge (opcional, para funcionalidades avançadas)
BUILT_IN_FORGE_API_URL=
BUILT_IN_FORGE_API_KEY=

# ========================================================================
# Configuração de Ambiente
# ========================================================================
# Ambiente de execução (development ou production)
NODE_ENV=development

# Porta do servidor (apenas para desenvolvimento local)
PORT=3000
